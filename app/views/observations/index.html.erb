<p id="notice"><%= notice %></p>

<h1>Observaciones</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @observations.each do |observation| %>
      <tr>
        <td><%= observation.name %></td>
        <td><%= link_to 'Ver', observation %></td>
        <td><%= link_to 'Editar', edit_observation_path(observation) %></td>
        <td><%= link_to 'Eliminar', observation, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Observación', new_observation_path %>
