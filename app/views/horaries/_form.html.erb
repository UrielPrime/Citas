<%= form_for(horary) do |f| %>
  <% if horary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(horary.errors.count, "error") %> No tiene permitido guardar este Horario:</h2>

      <ul>
      <% horary.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Reservación" %>
    <%= f.select :reservation_id, options_for_select(Reservation.all.map{|c| [c.description, c.id]}), {}, {class: "", data: {"live-search": true}} %>
  </div>

  <div class="field">
    <%= f.label "Fecha" %>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label "Hora Inicio" %>
    <%= f.time_select :hour %>
  </div>

  <div class="field">
    <%= f.label "Duración" %>
    <%= f.time_select :duration %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar Horario"%>
  </div>
<% end %>
