<p id="notice"><%= notice %></p>

<h1>Reservaciones</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Descripción</th>
      <th>Docente</th>
      <th>Salón</th>
      <th>Observaciones</th>
      <th>Fecha</th>
      <th>Hora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.description %></td>
        <td><%= reservation.teacher.name %></td>
        <td><%= reservation.room.name %> <%= reservation.room.location%></td>
        <td><%= reservation.observation.name %></td>
        <td><%= reservation.date%></td>
        <td><%= reservation.hour%></td>
        <td><%= link_to 'Ver', reservation %></td>
        <td><%= link_to 'Editar', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Eliminar', reservation, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Reservación', new_reservation_path %>
