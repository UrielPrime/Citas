<%= form_for(department) do |f| %>
  <% if department.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(department.errors.count, "error") %> No tiene permitido guardar este Departamento:</h2>

      <ul>
      <% department.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nombre" %>
    <%= f.text_field :name %>
  </div>

    <div class="field">
      <%= f.label "Campus" %>
      <%= f.select :center_id, options_for_select(Center.all.map{|c| [c.name, c.id]}), {}, {class: "", data: {"live-search": true}} %>
    </div>


    <div class="actions">
    <%= f.submit "Guardar Departamento" %>
  </div>
<% end %>
