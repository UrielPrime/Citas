<p id="notice"><%= notice %></p>

<h1>Campus</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Dirección</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @centers.each do |center| %>
      <tr>
        <td><%= center.name %></td>
        <td><%= center.address %></td>
        <td><%= link_to 'Ver', center %></td>
        <td><%= link_to 'Editar', edit_center_path(center) %></td>
        <td><%= link_to 'Eliminar', center, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Campus ', new_center_path %>
