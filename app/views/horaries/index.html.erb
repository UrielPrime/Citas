<p id="notice"><%= notice %></p>

<h1>Horaries</h1>

<table>
  <thead>
    <tr>
      <th>Reservation</th>
      <th>Date</th>
      <th>Hour</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @horaries.each do |horary| %>
      <tr>
        <td><%= horary.reservation %></td>
        <td><%= horary.date %></td>
        <td><%= horary.hour %></td>
        <td><%= horary.duration %></td>
        <td><%= link_to 'Show', horary %></td>
        <td><%= link_to 'Edit', edit_horary_path(horary) %></td>
        <td><%= link_to 'Destroy', horary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Horary', new_horary_path %>
